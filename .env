BLAZEGRAPH_XMX=512M

TRIPLESTORE_XMS=256M
TRIPLESTORE_XMX=512M

TREETAGGER_XMS=64M
TREETAGGER_XMX=256M

RDF4J_XMS=256M
RDF4J_XMX=512M

FITS_XMS=256M
FITS_XMX=512M

NEXUSCUBE_XMS=128M
NEXUSCUBE_XMX=256M

RELIGHT_XMS=128M
RELIGHT_XMX=640M

RSCRIPT_XMS=256M
RSCRIPT_XMX=640M

VEROVIO_XMS=128M
VEROVIO_XMX=256M

# Do not set this to 'true' unless you have a reverse proxy 
# in front of GAMS, which provides https.
ALLOW_HTTP=false


